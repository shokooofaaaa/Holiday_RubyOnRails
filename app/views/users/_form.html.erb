<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div style="color: red">
      <h2> Fehler verhinderte das Speichern dieses Benutzers:</h2>

      <ul>

          <li>  <%= user.errors.full_message(:kann, 'nicht leer sein')  %> </li>

      </ul>
    </div>
  <% end %>




  <div>
    <%= form.label :Name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>


  <div>
    <%= form.submit "Benutzer erstellen" %>
  </div>
<% end %>
